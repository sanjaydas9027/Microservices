    agent {
        docker {
            image 'abhishekf5/maven-abhishek-docker-agent:v1'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('Stage1') {
            steps {
                // List files in the workspace
                sh 'ls -ltr'

                // Replace this with your actual Maven build steps
                sh 'mvn clean package'
            }
        }
        
    }
}
